<% include ../partials/header %>
<div class="container">
            <div class="row" >
                
                <div style="width:30%; margin:50px auto;">
                    <h1 style="padding-bottom:25px;">
                        Add a comment to <%= campground.name%>
                    </h1>
                              <form action="/campgrounds/<%=campground._id%>/comment" method="POST">
                              <div class="form-group">
                                     <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                              </div>
                                <div class="form-group">
                                    <button class="btn btn-block btn-primary">Submit</button>
                                </div>
                              </form>
                              <a class="btn btn-block btn-warning" href="/campgrounds"> Back to Campgrounds</a>
                </div>
            </div>
</div>

<% include ../partials/footer %>