<% include ../partials/header %>
<div class="container">
            <div class="row" >
                
                <div style="width:30%; margin:50px auto;">
                    <h1 style="padding-bottom:25px;">
                        Create a New Camp
                    </h1>
                              <form action="/campgrounds" method="POST">
                              <div class="form-group">
                                     <input class="form-control" type="text" name="name" placeholder="Name of campground">
                              </div>
                              <div class="form-group">
                                    <input class="form-control" type="text" name="image" placeholder="Campground image url">
                              </div>
                              <div class="form-group">
                                <input class="form-control" type="text" name="description" placeholder="Description">
                          </div>
                          <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01" >
                      </div>
                                <div class="form-group">
                                    <button class="btn btn-block btn-primary">Submit</button>
                                </div>
                              </form>
                              <a class="btn btn-block btn-warning" href="/campgrounds"> Back to Campgrounds</a>
                </div>
            </div>
</div>


<% include ../partials/footer %>